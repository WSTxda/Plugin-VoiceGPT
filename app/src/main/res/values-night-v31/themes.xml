<resources xmlns:tools="http://schemas.android.com/tools">

    <!--app theme base-->

    <style name="AppTheme.Base" parent="@style/Theme.Material3Expressive.DynamicColors.Dark.NoActionBar">
        <!--preference theme-->
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="preferenceTheme">@style/AppTheme.Preference.Overlay</item>
        <item name="android:textAppearanceListItem">@style/Theme.TextAppearance.Preference.Title</item>
        <!--components theme-->
        <item name="bottomSheetDialogTheme">@style/Theme.Component.Material.BottomSheet</item>
        <item name="alertDialogTheme">@style/Theme.Component.Material.AlertDialog</item>
        <item name="snackbarStyle">@style/Theme.Component.Material.Snackbar</item>
        <item name="switchPreferenceCompatStyle">@style/Theme.Component.Material.SwitchPreferenceCompat</item>
        <!--fixes some UI issues on MIUI/HyperOS devices -->
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <!--app bars colors-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- layout padding -->
        <item name="android:listPreferredItemPaddingLeft">24dp</item>
        <item name="android:listPreferredItemPaddingRight">24dp</item>
        <item name="android:listPreferredItemPaddingStart">24dp</item>
        <item name="android:listPreferredItemPaddingEnd">24dp</item>
        <item name="android:listPreferredItemHeightSmall">72dp</item>
        <!--dynamic colors-->
        <item name="isMaterial3DynamicColorApplied">true</item>
    </style>
</resources>